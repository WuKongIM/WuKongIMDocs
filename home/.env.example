# WuKongIM 文档项目环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 项目基本信息
PROJECT_NAME=wukongim-docs
PROJECT_VERSION=1.0.0

# 容器仓库配置
# 支持的仓库类型: docker.io, registry.cn-hangzhou.aliyuncs.com, ccr.ccs.tencentyun.com
REGISTRY=registry.cn-hangzhou.aliyuncs.com
NAMESPACE=wukongim
IMAGE_NAME=wukongim-docs

# 部署环境配置
ENVIRONMENT=production
TZ=Asia/Shanghai

# 网络配置
HTTP_PORT=80
HTTPS_PORT=443

# 域名配置 (用于 Traefik 等反向代理)
DOMAIN=docs.wukongim.com

# SSL 证书配置
SSL_EMAIL=admin@wukongim.com

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# 开发环境配置
DEV_PORT=3000
DEV_HOST=localhost

# 构建配置
BUILD_ARGS=""
DOCKER_BUILD_ARGS="--no-cache --pull"

# 安全配置
SECURITY_HEADERS=true
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
